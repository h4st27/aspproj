@using MyApp.ViewModels
@{
    ViewData["Title"] = "Home Page";
}
@model OrdersView
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Product Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Products)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.Name</td>
                <td>@order.Name</td>
                <td>@order.Description</td>
            </tr>
        }
    </tbody>
</table>
