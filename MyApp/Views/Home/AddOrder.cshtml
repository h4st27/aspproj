@model Order 


<form asp-action="PostOrder" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price ($)</label>
        <input asp-for="Price" class="form-control" required/>
    </div>
    <div class="form-group">
        <label>Amount</label>
        <input min="1" type="number" value="1" name="amount" class="form-control" required />
    </div>
    <button style="width:100%;margin-top: 15px" type="submit" class="btn btn-primary btn-block">Create Order</button>
</form>
