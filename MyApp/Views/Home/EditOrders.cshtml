@using MyApp.ViewModels
@{
    ViewData["Title"] = "Home Page";
}
@model OrdersView
<h2>Edit Order</h2>
<ul>
<form asp-action="EditOrders" method="post">
    @for (var i = 0; i < Model.Products.Count(); i++)
    {
        var item = Model.Products.ElementAt(i);
        if (item != null)
        {
            <div class="form-group">
                <label asp-for="@item.Name">Product Name</label>
                <input asp-for="@item.Name" name="Products[@i].Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@item.Description">Product Description</label>
                <textarea asp-for="@item.Description" name="Products[@i].Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label>User Name</label>
                <input type="text" class="form-control" value="@item.User.Name" disabled />
            </div>
        }
    }
    <button style="width:100%" type="submit" class="btn btn-primary">Update Order</button>
</form>

</ul>
